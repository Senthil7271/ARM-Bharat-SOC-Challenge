<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary"
    tools:context=".ui.MainActivity">

    <!-- App Bar -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_primary"
        app:elevation="0dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="@string/app_name"
            app:titleTextColor="@color/text_primary"
            app:titleCentered="true"
            app:titleTextAppearance="@style/TextAppearance.VoiceTranslator.Headline" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Model Download Status Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardModelStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:visibility="gone"
                app:cardBackgroundColor="@color/surface_variant"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp"
                tools:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/downloading_models"
                        android:textAppearance="@style/TextAppearance.VoiceTranslator.Label"
                        android:textColor="@color/text_secondary" />

                    <com.google.android.material.progressindicator.LinearProgressIndicator
                        android:id="@+id/progressDownload"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:indeterminate="true"
                        app:indicatorColor="@color/primary"
                        app:trackColor="@color/primary_variant"
                        app:trackCornerRadius="4dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Language Selector -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/surface"
                app:cardCornerRadius="24dp"
                app:cardElevation="2dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <!-- Source Language Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSourceLanguage"
                        style="@style/Widget.VoiceTranslator.LanguageButton"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="@string/english"
                        app:icon="@drawable/ic_language" />

                    <!-- Swap Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSwapLanguages"
                        style="@style/Widget.Material3.Button.IconButton.Filled.Tonal"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:layout_marginHorizontal="8dp"
                        app:icon="@drawable/ic_swap"
                        app:iconGravity="textStart"
                        app:iconSize="24dp"
                        app:shapeAppearance="@style/ShapeAppearance.VoiceTranslator.Circle" />

                    <!-- Target Language Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnTargetLanguage"
                        style="@style/Widget.VoiceTranslator.LanguageButton"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="@string/hindi"
                        app:icon="@drawable/ic_language" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Source Text Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/surface"
                app:cardCornerRadius="24dp"
                app:cardElevation="2dp"
                app:strokeWidth="0dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <!-- Source Language Label -->
                    <TextView
                        android:id="@+id/tvSourceLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/english"
                        android:textAppearance="@style/TextAppearance.VoiceTranslator.Label"
                        android:textColor="@color/primary"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <!-- Clear Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnClearSource"
                        style="@style/Widget.Material3.Button.IconButton"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:visibility="gone"
                        app:icon="@drawable/ic_close"
                        app:iconSize="20dp"
                        app:iconTint="@color/text_secondary"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:visibility="visible" />

                    <!-- Source Text Input -->
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etSourceText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:background="@null"
                        android:gravity="top|start"
                        android:hint="@string/hint_enter_text"
                        android:inputType="textMultiLine|textCapSentences"
                        android:minHeight="120dp"
                        android:textAppearance="@style/TextAppearance.VoiceTranslator.Body"
                        android:textColor="@color/text_primary"
                        android:textColorHint="@color/text_hint"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvSourceLabel" />

                    <!-- Divider -->
                    <View
                        android:id="@+id/dividerSource"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_marginTop="12dp"
                        android:background="@color/divider"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/etSourceText" />

                    <!-- Voice Input Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnVoiceInput"
                        style="@style/Widget.Material3.Button.IconButton.Filled.Tonal"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginTop="12dp"
                        app:icon="@drawable/ic_mic"
                        app:iconSize="24dp"
                        app:shapeAppearance="@style/ShapeAppearance.VoiceTranslator.Circle"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/dividerSource" />

                    <!-- Character Count -->
                    <TextView
                        android:id="@+id/tvCharCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0/5000"
                        android:textAppearance="@style/TextAppearance.VoiceTranslator.Caption"
                        android:textColor="@color/text_hint"
                        app:layout_constraintBottom_toBottomOf="@id/btnVoiceInput"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/btnVoiceInput" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Translate Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnTranslate"
                style="@style/Widget.Material3.Button"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="16dp"
                android:text="@string/translate"
                android:textAllCaps="false"
                android:textSize="16sp"
                app:backgroundTint="@color/primary"
                app:cornerRadius="28dp"
                app:icon="@drawable/ic_translate"
                app:iconGravity="textStart"
                app:iconPadding="8dp" />

            <!-- Translated Text Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardTranslation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/surface_accent"
                app:cardCornerRadius="24dp"
                app:cardElevation="2dp"
                app:strokeWidth="0dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <!-- Target Language Label -->
                    <TextView
                        android:id="@+id/tvTargetLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hindi"
                        android:textAppearance="@style/TextAppearance.VoiceTranslator.Label"
                        android:textColor="@color/secondary"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <!-- Copy Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnCopyTranslation"
                        style="@style/Widget.Material3.Button.IconButton"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:icon="@drawable/ic_copy"
                        app:iconSize="20dp"
                        app:iconTint="@color/text_secondary"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <!-- Translation Loading -->
                    <com.google.android.material.progressindicator.CircularProgressIndicator
                        android:id="@+id/progressTranslation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:indeterminate="true"
                        android:visibility="gone"
                        app:indicatorColor="@color/secondary"
                        app:indicatorSize="32dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvTargetLabel"
                        app:trackThickness="3dp"
                        tools:visibility="gone" />

                    <!-- Translated Text -->
                    <TextView
                        android:id="@+id/tvTranslatedText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:minHeight="100dp"
                        android:text="@string/hint_translation_appear"
                        android:textAppearance="@style/TextAppearance.VoiceTranslator.Body"
                        android:textColor="@color/text_primary"
                        android:textIsSelectable="true"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvTargetLabel" />

                    <!-- Divider -->
                    <View
                        android:id="@+id/dividerTranslation"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_marginTop="12dp"
                        android:background="@color/divider"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvTranslatedText" />

                    <!-- Speak Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSpeakTranslation"
                        style="@style/Widget.Material3.Button.IconButton.Filled.Tonal"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginTop="12dp"
                        app:icon="@drawable/ic_volume"
                        app:iconSize="24dp"
                        app:shapeAppearance="@style/ShapeAppearance.VoiceTranslator.Circle"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/dividerTranslation" />

                    <!-- Share Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnShareTranslation"
                        style="@style/Widget.Material3.Button.IconButton"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginTop="12dp"
                        app:icon="@drawable/ic_share"
                        app:iconSize="24dp"
                        app:iconTint="@color/text_secondary"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/dividerTranslation" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Voice Input Overlay -->
    <FrameLayout
        android:id="@+id/overlayVoiceInput"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/overlay_background"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone"
        tools:visibility="gone">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:cardBackgroundColor="@color/surface"
            app:cardCornerRadius="32dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="32dp">

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/lottieListening"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_rawRes="@raw/listening_animation" />

                <TextView
                    android:id="@+id/tvListeningStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/listening"
                    android:textAppearance="@style/TextAppearance.VoiceTranslator.Title"
                    android:textColor="@color/text_primary" />

                <TextView
                    android:id="@+id/tvListeningHint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/speak_now"
                    android:textAppearance="@style/TextAppearance.VoiceTranslator.Caption"
                    android:textColor="@color/text_secondary" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnStopListening"
                    style="@style/Widget.Material3.Button.TonalButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="@string/stop"
                    app:cornerRadius="20dp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
